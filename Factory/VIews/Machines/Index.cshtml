<a asp-controller="Machines" asp-action="Create">New Machine</a>

@if (@Model.Count == 0)
{
    <h3>No machines have been added...</h3>
}

@foreach (Machine machine in Model)
{
    <div class="listRow">
    <img class="thumbnail" src=@machine.ImageUrl alt="thumbnail">
    <h3>@Html.ActionLink($"{@machine.Name}", "Details", new { id = machine.MachineId })
</div>
}