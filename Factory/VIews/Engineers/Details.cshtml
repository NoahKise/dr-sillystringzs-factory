@model Factory.Models.Engineer

<body>
    <div class="detailsCard">
        <div class="detailsCardImage">
            <img src="@Model.ImageUrl" alt="Engineer" />
        </div>
        <div class="detailsCardText">
            <h2>@Model.Name</h2>
            <p>Licensed to Repair:</p>
            <ul>
                @foreach (EngineerMachine join in Model.EngineerMachines)
                {
                    <li><em>@Html.ActionLink($"{join.Machine.Name}", "Details", "Machines", new
                                {
                                    id =
                                     join.Machine.MachineId
                                }) </em></li>
                }
            </ul>
            <div class="detailsCardIcons">
                <a href="/engineers/edit/@Model.EngineerId">
                    <img class="icon" src="~/assets/images/editIcon.webp" alt="edit icon" />
                </a>
                <a href="/engineers/delete/@Model.EngineerId">
                    <img class="icon" src="~/assets/images/deleteIcon.png" alt="delete icon" />
                </a>
            </div>
        </div>
    </div>
</body>
