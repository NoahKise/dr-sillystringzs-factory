<a asp-controller="Engineers" asp-action="Create">New Engineer</a>

@if (@Model.Count == 0)
{
    <h3>No engineers have been added...</h3>
}

@foreach (Engineer engineer in Model)
{
    <a href="/engineers/details/@engineer.EngineerId">
    <div class="listRow">
        <img class="thumbnail" src=@engineer.ImageUrl alt="thumbnail">
        <h3>@engineer.Name</h3>
    </div>
</a>
}